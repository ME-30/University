@model University.BL.Models.MailVM
@{
    ViewBag.Title = "Send Mail";
}

<center>
     <h2>Send Mail</h2>
      @TempData["Msg"]
</center>

<form asp-controller="Mail" asp-action="index" class="form-group" enctype="multipart/form-data" >

    <label asp-for="Customer">Customer</label>
    <input type="text" asp-for="Customer" placeholder="Enter Email" class="form-control" />
    <span asp-validation-for="Customer" class="text-danger"></span>
    <br />
    <br />


     <label asp-for="Title">Title</label>
    <input type="text" asp-for="Title" placeholder="Enter Title" class="form-control" />
       <span asp-validation-for="Title" class="text-danger"></span>

    <br />
    <br />


     <label asp-for="Message">Message</label>
     <textarea asp-for="Message" placeholder="Enter Message" class="form-control" row="4"></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>

    <br />
    <br />
       <label asp-for="Attach">Send File</label>
        <input type="file" asp-for="Attach"  />

    <br />
    <br />

    <center>
        <input type="submit" value="Send" class="btn btn-primary" />
    </center>
</form>


@section Validation{
     <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
     <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}