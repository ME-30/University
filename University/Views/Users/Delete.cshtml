@model IdentityUser


@{
    ViewBag.Title = "Delete User";
}

<center class="block-header">
      <h2>Delete User</h2>
</center>
<br />
<br />

<a class="btn btn-primary" asp-controller="Users" asp-action="index"> Back To List</a>


<br />
<br />

<form class="form-group" asp-controller="Users" asp-action="Delete">


    <input type="hidden" class="form-control" asp-for="Id" />
    <br />
    <br />


    <label asp-for="UserName">User Name</label>
    <input type="text" class="form-control" readonly asp-for="UserName" />
    <br />
    <br />

    <label asp-for="Email"> Email</label>
    <input type="text" class="form-control" readonly asp-for="Email" />

    <br />
    <br />
    
    <center>
            <input type="submit" value="Delete" class="btn btn-info" />
    </center>


</form>
