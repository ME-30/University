@model List<University.BL.Models.UserInRoleVM>
@{
    ViewData["Title"] = "Add Or Remove Users";
    var RoleId = ViewBag.RoleId;
}

<h2>Add Or Remove Users</h2>

<form method="post" class="form-group">

    <div class="card-header">
        <h2>Add Or Remove User In Role</h2>
    </div>


    @for (int i = 0; i < Model.Count; i++)
    {

        <input asp-for="@Model[i].IsSelected" type="checkbox" class="filled-in">
        <label asp-for="@Model[i].IsSelected">@Model[i].EmailUser</label>
        <input type="hidden" asp-for="@Model[i].UserId" />
        <input type="hidden" asp-for="@Model[i].EmailUser" />

        <br />

    }

    <div class="card-footer">
        <input type="submit" value="Edit" class="btn btn-primary" />
    </div>


</form>

<br />

<a asp-controller="Roles" asp-action="Edit" asp-route-id="@ViewBag.RoleId">Cancle</a>