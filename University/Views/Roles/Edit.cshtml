@model IdentityRole
@{
    ViewData["Title"] = "Edit Role";
}

<h2>Edit</h2>

<form asp-controller="Roles" asp-action="Edit">

    <input type="hidden" asp-for="Id" />


    <label asp-for="Name">Name</label>
    <input type="text" class="form-control" asp-for="Name" />
    <br />
    <br />
    <center>
        <input type="submit" value="Edit" class="btn btn-primary btn-block" />
    </center>

</form>
<br />


<a asp-controller="Roles" asp-action="EditUserInRole" asp-route-RoleId="@Model.Id" class="btn btn-warning btn-block">Add Or Remove Users With Role</a>