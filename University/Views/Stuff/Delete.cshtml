@model University.BL.Models.StuffVM

@{
    ViewBag.Title = "Delete Stuff";
}
 @section BootstrapSelect {
        <link href="~/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
    }

<center class="block-header">
      <h2>Delete Stuff</h2>
</center>
<br />
<br />

<a class="btn btn-primary" asp-controller="Stuff" asp-action="index"> Back To List</a>

<form class="form-group" asp-controller="Stuff" asp-action="Delete">

<br />
<br />

<label asp-for="Id">Stuff id</label>
    <input type="hidden" class="form-control"disabled asp-for="Id" />
    <br />
    <br />

  <label asp-for="Name">Name</label>
    <input type="text" class="form-control" required asp-for="Name" />
    <br />
    <br />

    <label asp-for="Salary">Salary</label>
    <input type="text" class="form-control" required asp-for="Salary" />
    <br />

    <label asp-for="Adress">Address</label>
    <input type="text" class="form-control" required asp-for="Adress" />
    <br />

    <label asp-for="HareDate">Hare Date</label>
    <input type="text" class="form-control" required asp-for="HareDate" />
    <br />

    <label asp-for="Email">Email</label>
    <input type="text" class="form-control" required asp-for="Email" />
    <br />

    <label asp-for="Notes">Notes</label>
    <textarea class="form-control" asp-for="Notes" required rows="4"></textarea>
   <br />
       <div class="demo-checkbox">
        <input type="checkbox" asp-for="IsActive" checked="">
        <label asp-for="IsActive">IsActive</label>
    </div>

   <select asp-for="CollegeId" asp-items="(SelectList)ViewBag.CollegeList">
       <option>
           Choose College
       </option>
   </select>

    <br />
    <br />

<center>
    <a class="btn btn-primary" asp-controller="Staff" asp-action="Delete" asp-route-id="@Model.Id"> Delete</a>
</center>

</form>
