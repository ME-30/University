@model University.BL.Models.CoursesVM



@{
    ViewBag.Title ="Details Courses";
}

 @section BootstrapSelect {
        <link href="~/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
    }
<center class="block-header">
      <h2> Details Courses</h2>
</center>
<br />
<br />

<a class="btn btn-primary" asp-controller="Courses" asp-action="index"> Back To List</a>


<br />
<br />

<form class="form-group" asp-controller="Courses" asp-action="Edit">
    <label asp-for="CourseName">Course Name</label>
    <input type="text" class="form-control" readonly asp-for="CourseName" />
    <br />
    <br />

    <label asp-for="MaterialName">Material Name</label>
    <input type="text" class="form-control" readonly asp-for="MaterialName" />
    <br />

    <label asp-for="ExamName">Exam</label>
    <input type="text" class="form-control" readonly required asp-for="ExamName" />
    <br />  

    <br />
    <select asp-for="CollegeId" asp-items="(SelectList)ViewBag.CollegeList">
        <option>Choose College</option>
    </select>
        <br />

    <br />

     <center>
            <input type="submit" value="Edit" class="btn btn-info" />

    </center>

</form>
