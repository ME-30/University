@model University.BL.Models.CoursesVM



@{
    ViewBag.Title ="Update Courses";
}

 @section BootstrapSelect {
        <link href="~/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
    }
<center class="block-header">
      <h2> Update Courses</h2>
</center>
<br />
<br />

<a class="btn btn-primary" asp-controller="Courses" asp-action="index"> Back To List</a>


<br />
<br />

<form class="form-group" asp-controller="Courses" asp-action="Edit" enctype="multipart/form-data">
    <label asp-for="CourseName">Course Name</label>
    <input type="text" class="form-control" asp-for="CourseName" />
    <span asp-validation-for="CourseName"class="text-danger"></span>
    <br />
    <br />

    <label asp-for="MaterialUrl">Material Name</label>
    <input type="file" class="form-control" asp-for="MaterialUrl" />
    <br />

    <label asp-for="ExamUrl">Exam</label>
    <input type="file" class="form-control"  asp-for="ExamUrl" />
    <br />  

    <br />
    <select asp-for="CollegeId" asp-items="(SelectList)ViewBag.CollegeList">
        <option>Choose College</option>
    </select>
        <br />

    <br /> 
     <center>
            <input type="submit" value="Update" class="btn btn-info" />
    </center>


</form>

@section Validation{
     <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
     <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}